<!DOCTYPE html>
<html>
<head>
<title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag "application" %>
</head>
<body>
    <div class="container">
    <%= render 'layouts/header'%>
    <section class="round">
        <%flash.each { |key, value|%>
            <div class="flash <%=key%>">
                <%=value%>
            </div>
        <%}%>
    </section>
    <section class="round">
        <%= yield %>
    </section>
    </div>
</body>
<footer
    <%= render 'layouts/footer'%>
    <%= debug(params) if Rails.env.development? %>
</footer>
</html>

